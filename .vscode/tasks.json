{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "options": { "cwd": "${workspaceFolder}/build" },
            "command": "cmake --build ${workspaceFolder}/build --target multiboot mos_userspace_programs mos_initrd",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                // "close": true
            }
        },
        {
            "label": "kill_mos",
            "type": "shell",
            "command": "tmux kill-session -t mos_kernel_debug || true",
            "problemMatcher": [ ],
            "group": "none",
            "presentation": {
                "reveal": "silent",
                "close": true
            }
        },
        {
            "label": "start_os",
            "type": "process",
            "command": "tmux",
            "options": {
                "cwd": "${workspaceFolder}/build",
            },
            "args": [
                "new",
                "-s",
                "mos_kernel_debug",
                "-d",
                "qemu-system-i386",
                "-m",
                "4G",
                "-smp",
                "1",
                "-display",
                "gtk,show-tabs=on",
                "-kernel",
                "${workspaceFolder}/build/mos_multiboot.bin",
                "-s",
                "-S",
                "-chardev",
                "stdio,id=serial_log,logfile=serial_log.log,signal=off",
                "-serial",
                "chardev:serial_log",
                "-initrd",
                "${workspaceFolder}/build/initrd.cpio"
            ],
            "problemMatcher": [ ],
            "group": "none",
            "dependsOn": [
                "kill_mos",
                "compile"
            ],
            "presentation": {
                "reveal": "silent",
                "close": true
            },
            "detail": "Start MOS and wait for the debugger to connect."
        }
    ]
}
